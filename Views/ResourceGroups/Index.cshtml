@model List<AzureIntegration.Services.ResourceGroup>

<h2>Resource Groups</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            foreach (var resourceGroup in Model)
            {
                <tr>
                    <td>@resourceGroup.Name</td>
                    <td>@resourceGroup.Location</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2">No resource groups found.</td>
            </tr>
        }
    </tbody>
</table>
